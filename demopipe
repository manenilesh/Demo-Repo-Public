pipeline
{
  agent {
    label 'n1'
        }
          stages
          {
            stage ('Install Apache2')
            {
              steps
              {
                 sh '''sudo apt update
                  sudo apt-get install apache2 -y
                  sudo systemctl start apache2'''
              }
            }
             stage ('Install unzip')
            {
              steps
              {
                 sh '''sudo apt update
                  sudo apt-get install unzip -y
                  '''
              }
            }
            stage ('Download & setup Webpage')
            {
              steps
              {
                sh '''wget https://www.free-css.com/assets/files/free-css-templates/download/page295/handtime.zip
                sudo unzip handtime.zip'''
              }
            }
            stage ('Setup Configuration')
            {
              steps
              {
                  sh '''cd /home/ubuntu/workspace/Master-Prokject/handtime-html
                  sudo mv * /var/www/html/'''
              }
            }
          }
}
